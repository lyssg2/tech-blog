<header>
  <div class="wrapper">
    <nav>
      <div class="nav-wrapper light-green darken-3">
        <a href="#" class="brand-logo left">TECH BLOG</a>
        <ul id="nav-mobile" class="right">
          <li><a href="/">HOME</a></li>
          <li><a href="/dashboard">DASHBOARD</a></li>
          <li><a href="#" id="logout-link">LOGOUT</a></li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<div class="container">
  <form class="col s12" id="new-post-form">
    <div class="row center-align">
      <div class="col s12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">New Post</span>
            <input type="hidden" name="post-id" value="{{post.id}}" />
            <div class="row">
              <div class="input-field col s6">
                <input id="post-title" type="text" class="validate">
                <label for="post-title">Title</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="post-body" class="materialize-textarea" name="post-body"></textarea>
                <label for="textarea1">Type Here...</label>
              </div>
            </div>
            <button class="btn waves-effect waves-light submit" type="submit" name="action" id="submit">Submit
              <i class="material-icons right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="/js/new-post.js"></script>