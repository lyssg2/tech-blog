<div class="container">
  <form class="col s12" id="new-post-form">
    <div class="row center-align">
      <div class="col s12">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">New Post</span>
            <input type="hidden" name="post-id" value="{{post.id}}" />
            <div class="row">
              <div class="input-field col s6">
                <input id="post-title" type="text" class="validate">
                <label for="post-title">Title</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <textarea id="post-body" class="materialize-textarea" name="post-body"></textarea>
                <label for="textarea1">Type Here...</label>
              </div>
            </div>
            <button class="btn waves-effect waves-light submit" type="submit" name="action" id="submit">Submit
              <i class="material-icons right"></i>
            </button>
  </form>
</div>
</div>
</div>
</div>
</div>
<script src="/js/new-post.js"></script>